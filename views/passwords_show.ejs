<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PasswordKeepR</title>
    <%- include('partials/_head') %>
  </head>

  <body>

    <%- include('partials/_header') %>

    <main class="container">
      <div class="d-flex align-items-center">
        <a class="pr-3" href="/passwords"><img src="/images/back_arrow.png" alt="back" width="20" height="20"></a>
        <h1 class="mb-0"> Edit Password </h1>
      </div>

      <form action="/passwords/<%= password.id %>" method="POST" class="justify-content-center">

        <div class="form-group row">
          <label for="inputEmail" class="col-sm-2 col-form-label">Label</label>
          <div class="col-sm-10">
            <input type="text" value="<%= password.label %>" class="form-control" name="label" id="inputLabel" placeholder="Label">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputEmail" class="col-sm-2 col-form-label">URL</label>
          <div class="col-sm-10">
            <input type="text" value="<%= password.url %>" class="form-control" name="url" id="inputUrl" placeholder="URL">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputUsername" class="col-sm-2 col-form-label">Username</label>
          <div class="col-sm-10">
            <input type="text" value="<%= password.username %>" class="form-control" name="username" id="inputUsername" placeholder="Username">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-8">
            <input type="password" value="<%= password.password %>" class="form-control" name="password" id="inputPassword" placeholder="Password">
          </div>
          <div class="col-sm-2">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" id="show-password">
              <label class="form-check-label" for="show-password">
                Show Password
              </label>
            </div>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputCategory" class="col-sm-2 col-form-label">Category</label>
          <div class="col-sm-10">
            <input type="text" value="<%= password.category %>" class="form-control" name="category" id="inputCategory" placeholder="Category">
          </div>

        </div>

        <div class="input-group mb-3">
          <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01">Organisations</label>
          </div>
            <select class="custom-select" id="inputGroupSelect01" name="orgId">
              <option value="" selected>None</option>
          </select>
        </div>

        <div class="button-container">
          <!-- need to add functionality to Generate and Delete buttons with javascript-->
          <div class="button-row">

            <button type="button" id="generate-password" class="btn btn-secondary generate-button">Generate</button>

          </div>

          <div class="button-row">

            <button type="submit" class="btn btn-primary pw-button">Save</button>

          </div>

        </div>
      </form>
      <form action="/passwords/<%= password.id %>/delete" method="POST" class="delete">

        <div class="button-row">

          <button type="submit" id="delete-password" class="btn btn-danger pw-button">Delete</button>

        </div>

      </form>

    </main>
    <%- include('partials/_scripts') %>
  </body>
</html>
