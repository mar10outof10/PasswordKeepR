  <body>
    <%- include('partials/_header') %>

    <main class="container">
      <h1>Password List</h1>
      <section class="articles-container">
        <!-- <% for (password of passwords) { %> -->
          <article class="art-main">
            <div class="art-icon">
              <!-- password icon https://static.thenounproject.com/png/16205-200.png -->
              <img src="https://static.thenounproject.com/png/16205-200.png">
            </div>
            <div class="art-body">
              <header>
                <span class="art-url"><%= password.label %></span>
                <!-- pencil drawing icon http://simpleicon.com/wp-content/uploads/pencil.png -->
                <a class="art-view" href="/passwords/<%= password.id %>">&#128065;</a>
              </header>

              <footer>
                <div class="art-username">
                  <span class="art-label">User:</span><span><%= password.username %></span>
                </div>
                <div class="art-password">
                  <span class="art-label">Password:</span><span><%= password.password %></span>

                </div>

              </footer>

              </div>

            </div>

          </article>
        <!-- <% } %> -->
      </section>


    </main>
  </body>
