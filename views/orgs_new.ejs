<!DOCTYPE html>
<html lang="en">
  <head>
    <title>PasswordKeepr - New Organisation</title>
    <%- include('partials/_head') %>
  </head>

  <body>
    <%- include('partials/_header') %>

    <main class="container">
      <h1> New Organisation </h1>
      <form action="/orgs" method="POST" class="justify-content-center">

        <div class="form-group row">
          <label for="inputName" class="col-sm-3 col-form-label">Organisation Name:</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" id="inputName" placeholder="Org Name">
          </div>
        </div>
        <div class="form-group row">
          <label for="inputIcon" class="col-sm-3 col-form-label">Icon URL:</label>
          <div class="col-sm-9">
            <input type="text" class="form-control" id="inputIcon" placeholder="https://i.images.com/heart.jpg">
          </div>
        </div>

        <div class="button-container">
          <div class="button-row">
              <button type="submit" class="btn btn-primary">Submit</button>
          </div>

        </div>
      </form>

    </main>
    <%- include('partials/_scripts') %>
  </body>
</html>
